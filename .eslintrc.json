{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:sonarjs/recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["sonarjs"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-error-on-unmatched-pattern": 1
    }
}
